# MCP Text Pseudonymizer Configuration Template
# Copy this file to .env and configure the values

# Huggingface Configuration
# Optional: Huggingface token for better model download reliability and rate limit avoidance
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your-hf-access-token

# Logging Configuration
LOG_LEVEL=INFO

# Model Configuration
MODEL_CACHE_DIR=./models
TORCH_DEVICE=auto

# Performance Settings
MIN_CONFIDENCE_THRESHOLD=0.5
MAX_TEXT_LENGTH=10000
BATCH_SIZE=10

# Server Configuration
MCP_SERVER_NAME=Text Pseudonymizer
MCP_SERVER_PORT=3000

# Language Settings
DEFAULT_LANGUAGE=auto
SUPPORTED_LANGUAGES=de,en

# Session Management
DEFAULT_SESSION_TIMEOUT=3600
MAX_SESSIONS=100

# Extended Entity Recognition
ENABLE_EMAIL_DETECTION=true
ENABLE_PHONE_DETECTION=true
ENABLE_DATE_DETECTION=true
ENABLE_ID_DETECTION=true
ENABLE_IBAN_DETECTION=true

# Error Handling
GRACEFUL_DEGRADATION=true
TIMEOUT_SECONDS=30